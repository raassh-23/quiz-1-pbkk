@{
    ViewData["Title"] = "Collaboration";
}

@section Styles {
<style>
    @*ref:https://www.tutorialrepublic.com/faq/how-to-add-icons-to-input-submit-button-in-bootstrap.php*@.icon-input-btn {
        display: inline-block;
        position: relative;
    }

    .icon-input-btn input[type="submit"] {
        padding-left: 2em;
    }

    .icon-input-btn .bi {
        color: white;
        display: inline-block;
        position: absolute;
        left: 0.65em;
        top: 20%;
    }

    .message {
        width: 100%;
        height: calc(100% + 40px)
    }
    
    .send {
        margin-top: 0px;
    }

    @@media (max-width: 768px) {
        .message {
            height: 90%;
        }

        .send {
            margin-top: 10px;
        }
    }
</style>
}

<div class="h-100 d-flex flex-column justify-content-center align-items-center">
    <h1 class="text-center text-primary mb-2">Contact Us</h1>
    <div class="col-md-8 rounded">
        <p class="text-center mb-1">Want to do a collab with us? Looking for a sponsor? Have a question about us? Or just want to
            chat with someone?</p>
        <h4 class="text-center mb-3">Send us a message!</h4>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <input type="text" name="name" class="form-control rounded" placeholder="Your Name" value="" />
                    </div>
                    <div class="form-group mb-3">
                        <input type="email" name="email" class="form-control rounded" placeholder="Your Email"
                            value="" />
                    </div>
                    <div class="form-group mb-3">
                        <input type="tel" name="phone" class="form-control" placeholder="Your Phone Number" value="" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3 h-100">
                        <textarea name="message" class="form-control message" placeholder="Your Message *"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group mb-3">
                    <span class="icon-input-btn send">
                        <i class="bi bi-send"></i>
                        <input type="submit" class="btn btn-primary btn-md" value="Send">
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>
